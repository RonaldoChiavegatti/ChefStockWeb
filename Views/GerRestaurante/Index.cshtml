
@model IEnumerable<ChefStock.Models.Funcionario>


@{
    ViewData["Title"] = "Gerenciar Funcionários";
}

<h1>@ViewData["Title"]</h1>

<!-- Formulário para adicionar um novo funcionário -->
<form asp-action="AdicionarFuncionario" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" required />
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <button type="submit" class="btn btn-primary">Adicionar Funcionário</button>
</form>

<hr />

<h3>Funcionários Cadastrados</h3>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funcionario in Model)
        {
            <tr>
                <td>@funcionario.Nome</td>
                <td>@funcionario.Email</td>
            </tr>
        }
    </tbody>
</table>
