@model IEnumerable<SeuProjeto.Models.ItemCompra>

<h2>Lista de Compras</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th>Total</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Quantidade</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Criar" class="btn btn-primary">Adicionar Item</a>
